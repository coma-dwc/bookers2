<!-- 全ユーザーの投稿一覧ページ books#index books_path -->
<div class="container px-5 px-sm-0">
<div class="row">
<div class='col-md-3'>
<!-- user info -->
<%= render 'users/info', users: @users %>

<!-- new book -->
<%= render 'newbook', book: @book %>
</div>

<!-- 右側(Books) -->
<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
        <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %> <!-- user_path users#show ログイン後の自分のHomeページに飛ぶ -->
                  <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %> <!-- book_path books#show book detailのページに飛ぶ -->
                  <%= book.title %>
                  <% end %>
                </td>

                <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
</div>
</div>